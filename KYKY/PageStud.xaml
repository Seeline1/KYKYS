<Page x:Class="KYKY.PageStud"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KYKY"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageStud">

    <Grid Background="Beige">
        <Grid.RowDefinitions>
            <RowDefinition Height="61*"/>
            <RowDefinition Height="89*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Student" HorizontalAlignment="Center" FontSize="30" Margin="349,0,348,0" Grid.RowSpan="2"></TextBlock>
        <TextBox Name="txtnome" Text="{Binding Name}" Height="100" Width="200" TextChanged="TextBox_TextChanged" Margin="300,175" Grid.RowSpan="2"></TextBox>
    </Grid>
</Page>
